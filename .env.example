# Visual Patterns RT Tool - Environment Variables

# Debug Mode - General
# Set to 'true' to enable debug overlay and console logging
VITE_DEBUG_MODE=false

# Debug Categories (fine-grained control)
# Sequencer timing and pattern loading
VITE_DEBUG_SEQUENCER=false

# Pattern animation and interpolation
VITE_DEBUG_ANIMATION=false

# MIDI messages and mappings
VITE_DEBUG_MIDI=false

# Property sequencer and keyframes
VITE_DEBUG_PROPERTY_SEQUENCER=false

# Development Settings
# Set to 'true' for development mode
VITE_DEV_MODE=true

# API Keys (if needed in the future)
# VITE_GEMINI_API_KEY=your_api_key_here

# Performance Settings
# Maximum FPS for rendering (default: 60)
VITE_MAX_FPS=60

# MIDI Settings
# Enable/disable MIDI auto-connect on startup
VITE_MIDI_AUTO_CONNECT=true
